<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <sql-query name="getUsersCount">
        <![CDATA[select table_rows from information_schema.tables where table_name='users']]>
    </sql-query>
    <sql-query name="getTableNames">
        <![CDATA[show tables]]>
    </sql-query>
    <sql-query name="getDBUsers">
        <![CDATA[select user from mysql.user]]>
    </sql-query>
    <sql-query name="getDBSize">
        <![CDATA[select sum(data_length)/1024/1024 from information_schema.tables]]>
    </sql-query>
    <sql-query name="delTables">
        <![CDATA[drop table joined_credit_account,joined_debit_account, joined_account, creditaccount1,ms_debit_account,st_account,tps_account,tps_credit_account,tps_debit_account]]>
    </sql-query>
    <query name="getAllInst">
        <![CDATA[from TestEntity]]>
    </query>
    <query name="getTestEntityByName">
        <![CDATA[from TestEntity where name = :testEntityName]]>
    </query>
    <query name="getIdByName">
        <![CDATA[select id, name from TestEntity where name = :testEntityName]]>
    </query>
    
    <!-- Select Account -->
    <query name="getAccount2">
        <![CDATA[from Account2]]>
    </query>
    <query name="getAccount3">
        <![CDATA[from Account3]]>
    </query>
    <query name="getAccount4">
        <![CDATA[from Account4]]>
    </query>
    
    <!-- Select creditAccount -->
    <query name="getCreditAccount1">
        <![CDATA[from CreditAccount1]]>
    </query>
    <query name="getCreditAccount2">
        <![CDATA[from CreditAccount2]]>
    </query>
    <query name="getCreditAccount3">
        <![CDATA[from CreditAccount3]]>
    </query>
    <query name="getCreditAccount4">
        <![CDATA[from CreditAccount4]]>
    </query>
    
    <!-- Select debitAccount -->
    <query name="getDebitAccount1">
        <![CDATA[from DebitAccount1]]>
    </query>
    <query name="getDebitAccount2">
        <![CDATA[from DebitAccount2]]>
    </query>
    <query name="getDebitAccount3">
        <![CDATA[from DebitAccount3]]>
    </query>
    <query name="getDebitAccount4">
        <![CDATA[from DebitAccount4]]>
    </query>
    
    <!-- Delete creditAccount -->
    <query name="delCreditAccount1">
        <![CDATA[delete from CreditAccount1 where id=:parId]]>
    </query>
    
    <!-- Update debitAccount -->
    <query name="updateDebitAccount4">
        <![CDATA[update DebitAccount4 set owner=:parOwner where id=:parId]]>
    </query>
</hibernate-mapping>
